{
  "name": "camino-ui",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "vue-cli-service serve --open",
    "build": "vue-cli-service build",
    "start": "node ./index.js",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "compression": "^1.7.3",
    "connect-history-api-fallback": "^1.5.0",
    "dotenv": "^6.1.0",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.2.0",
    "@sentry/browser": "^4.4.0",
    "@types/node": "^10.12.10",
    "@vue/cli-plugin-babel": "^3.1.1",
    "@vue/cli-plugin-eslint": "^3.1.5",
    "@vue/cli-service": "^3.1.4",
    "@vue/eslint-config-prettier": "^4.0.1",
    "@vue/eslint-config-standard": "^4.0.0",
    "apollo-cache-inmemory": "^1.3.11",
    "apollo-client": "^2.4.7",
    "apollo-link": "^1.2.4",
    "apollo-link-context": "^1.0.10",
    "apollo-link-error": "^1.1.2",
    "apollo-link-http": "^1.5.7",
    "apollo-utilities": "^1.0.26",
    "babel-plugin-graphql-tag": "^1.6.0",
    "crypto-random-string": "^1.0.0",
    "eslint": "^5.9.0",
    "eslint-plugin-vue": "^5.0.0-beta.3",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "leaflet": "^1.3.4",
    "left-pad": "^1.3.0",
    "nprogress": "^0.2.0",
    "pixrem": "^4.0.1",
    "postcss-button": "^0.3.16",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-grid-fluid": "^0.3.3",
    "postcss-grid-system": "^0.4.15",
    "postcss-import": "^12.0.1",
    "postcss-inline-svg": "^3.1.1",
    "postcss-loader": "^3.0.0",
    "postcss-normalize": "^7.0.1",
    "postcss-preset-env": "^6.4.0",
    "postcss-typescale": "^0.2.1",
    "prettier": "^1.15.2",
    "slugify": "^1.3.3",
    "stylelint": "^9.8.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-standard": "^18.2.0",
    "unfetch": "^4.0.1",
    "vue": "^2.5.17",
    "vue-meta": "^1.5.5",
    "vue-router": "^3.0.1",
    "vue-template-compiler": "^2.5.17",
    "vuex": "^3.0.1"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ],
    "plugins": [
      "graphql-tag"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/recommended",
      "standard",
      "prettier",
      "prettier/standard"
    ],
    "rules": {
      "vue/html-closing-bracket-newline": [
        "error",
        {
          "singleline": "never",
          "multiline": "always"
        }
      ]
    }
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "proseWrap": "never"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "rules": {
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "typescale",
            "gf",
            "/button-/"
          ]
        }
      ]
    },
    "ignoreFiles": [
      "./dist/**/*"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-normalize": {},
      "postcss-import": {},
      "postcss-typescale": {},
      "postcss-grid-system": {},
      "postcss-grid-fluid": {},
      "postcss-button": {},
      "postcss-inline-svg": {},
      "postcss-color-mod-function": {},
      "pixrem": {
        "html": false
      },
      "postcss-preset-env": {
        "stage": 0
      },
      "postcss-calc": {}
    }
  },
  "browserslist": [
    ">0.25%",
    "not op_mini all"
  ]
}
